{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": ["./*"],
      "@middleware": ["middlewares"],
      "@config": ["config"],
      "@utils": ["utils"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
